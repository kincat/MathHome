<!--bind.wxml-->
<view class="container"> 
  <view class="login-icon"> 
    <image class="login-img" src="/images/nan.png"></image> 
  </view> 

  <view class="login-from">
    <!--手机号-->
    <view class="inputView"> 
    <image class="nameImage" src="/images/ceping.png"></image> 
    <label class="loginLab">账号</label> 
    <input class="inputText" placeholder="请输入系统账号" data-id="loginId" bindinput="bindInput" /> 
    </view> 
    <view class="line"></view>  

    <!--密码-->
    <view class="inputView">
    <image class="keyImage" src="/images/password.png"></image> 
    <label class="loginLab">密码</label> 
    <input class="inputText" password="true" placeholder="请输入登录密码" data-id="pwd" bindinput="bindInput" />
    </view>  

    <!--按钮-->
    <view class="loginBtnView">
    <button style="width:60vw" class="loginBtn"  bindtap="bindStudent">绑定已有账号</button> 
    </view> 

    <view class="registerBtnView">
        <button class="registerBtn"  bindtap="goRegister">注册</button> 
    </view>
  </view> 
</view>

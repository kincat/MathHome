<!--pages/bind/bind.wxml-->
<view class="container"> 
  <view class="login-from">
    <view class="inputView"> 
    <label class="loginLab">姓名：</label> 
    <input class="inputText" placeholder="请输入学生姓名" data-id="name" bindinput="regInput" /> 
    </view> 

    <view class="inputView"> 
    <radio-group bindchange="regInput" data-id="sex" style=" margin-left: 10px; ">
      <label  style="font-size: 14px">性别：</label>
      <radio value='1' color='#090305' style="margin-left: 5%;">男</radio>
      <label  style="margin-left: 5%;"/>
      <radio value='0' color='#090305'>女</radio>
    </radio-group>
    </view> 

    <!--手机号-->
    <view class="inputView"> 
    <label class="loginLab">账号：</label> 
    <input class="inputText" placeholder="请输入登录账号" data-id="loginId" bindinput="regInput" /> 
    </view> 


    <!--密码-->
    <view class="inputView">
    <label class="loginLab">密码：</label> 
    <input class="inputText" password="true" placeholder="请输入登录密码" data-id="pwd1" bindinput="regInput" />
    </view>  

        <!--密码-->
        <view class="inputView">
    <label class="loginLab">密码：</label> 
    <input class="inputText" password="true" placeholder="再次输入登录密码" data-id="pwd2" bindinput="regInput" />
    </view> 

    <!--按钮-->
    <view class="loginBtnView">
    <button style="width:60vw" class="loginBtn"  bindtap="registerStudent">注册</button> 
    </view> 
  </view> 
</view>
